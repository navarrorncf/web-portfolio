{
  "name": "learning-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/learning-client/src",
  "tags": [],
  "i18n": {
    "sourceLocale": "en-US",
    "locales": {
      "pt": "apps/learning-client/src/locale/messages.pt-BR.xlf",
      "pt-PT": "apps/learning-client/src/locale/messages.pt-PT.xlf"
    }
  },
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/learning-client",
        "index": "apps/learning-client/src/index.html",
        "browser": "apps/learning-client/src/main.ts",
        "polyfills": ["zone.js", "@angular/localize/init"],
        "tsConfig": "apps/learning-client/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/learning-client/public"
          }
        ],
        "styles": ["apps/learning-client/src/styles.scss"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "localize": ["en-US", "pt", "pt-PT"],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "learning-client:build:production"
        },
        "development": {
          "buildTarget": "learning-client:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "learning-client:build",
        "outputPath": "apps/learning-client/src/locale"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/learning-client"
      }
    },
    "local-build": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p dist/apps/learning-client/browser && echo '<h1>Works</h1>' > dist/apps/learning-client/browser/index.html"
        ]
      }
    },
    "serve-static": {
      "continuous": true,
      "dependsOn": ["local-build"],
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "learning-client:local-build",
        "cors": true,
        "port": 3000,
        "staticFilePath": "dist/apps/learning-client/browser",
        "spa": true
      }
    }
  }
}
